<script>
document.getElementById('rsvpForm').addEventListener('submit', function(event) {
    event.preventDefault();

    const email = document.getElementById('email').value;
    const name = document.getElementById('name').value;

    document.getElementById('confirmation').style.display = 'block';

    window.location.href = `mailto:${email}?subject=Sacred%20SiStar%20Sundays%20RSVP%20Confirmed&body=Hello%20${encodeURIComponent(name)},%0D%0A%0D%0AYour%20RSVP%20for%20Sacred%20SiStar%20Sundays%20has%20been%20received.%0D%0A%0D%0AMarch%201%20at%2011:11%20AM%20PST%20/%202:11%20PM%20EST.%0D%0A`;
});
</script>

